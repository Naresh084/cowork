{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Default permissions for the application",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:event:default",
    "core:window:default",
    "core:app:default",
    "core:path:default",
    "core:path:allow-resolve-directory",
    "core:path:allow-resolve",
    "core:path:allow-join",
    "core:path:allow-normalize",
    "core:path:allow-basename",
    "core:path:allow-dirname",
    "shell:default",
    "shell:allow-open",
    "shell:allow-execute",
    "shell:allow-spawn",
    "dialog:default",
    "dialog:allow-open",
    "dialog:allow-save"
  ]
}
