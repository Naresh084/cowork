{
  "id": "todoist",
  "name": "todoist",
  "displayName": "Todoist",
  "description": "Create, manage, and complete tasks and projects in Todoist",
  "version": "1.0.0",
  "icon": "CheckSquare",
  "category": "productivity",
  "tags": ["tasks", "todo", "productivity", "reminders", "projects"],
  "transport": {
    "type": "stdio",
    "command": "npx",
    "args": ["-y", "todoist-mcp"]
  },
  "auth": {
    "type": "env",
    "secrets": [
      {
        "key": "TODOIST_API_TOKEN",
        "envVar": "API_KEY",
        "description": "Todoist API Token",
        "required": true,
        "placeholder": "...",
        "link": "https://todoist.com/app/settings/integrations/developer"
      }
    ]
  },
  "requirements": {
    "runtime": "node",
    "bins": ["npx"]
  },
  "documentation": {
    "setup": "https://github.com/abhiz123/todoist-mcp-server#setup",
    "homepage": "https://github.com/abhiz123/todoist-mcp-server"
  }
}
