{
  "id": "mongodb",
  "name": "mongodb",
  "displayName": "MongoDB",
  "description": "Query collections, inspect schema, and interact with MongoDB databases",
  "version": "1.0.0",
  "icon": "Database",
  "category": "database",
  "tags": ["nosql", "database", "query", "mongodb", "document"],
  "transport": {
    "type": "stdio",
    "command": "npx",
    "args": ["-y", "mongodb-mcp-server"]
  },
  "auth": {
    "type": "env",
    "secrets": [
      {
        "key": "MONGODB_URI",
        "envVar": "MDB_MCP_CONNECTION_STRING",
        "description": "MongoDB connection URI",
        "required": true,
        "placeholder": "mongodb://user:password@host:27017/database"
      }
    ]
  },
  "requirements": {
    "runtime": "node",
    "bins": ["npx"]
  },
  "documentation": {
    "homepage": "https://github.com/mongodb-js/mongodb-mcp-server"
  }
}
